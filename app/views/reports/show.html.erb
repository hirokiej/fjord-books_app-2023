<h1><%= t('views.common.title_report', name: Report.model_name.human) %></h1>

<div class="show-item">
  <%= render @report %>
</div>

<div>
  <%= render 'comments/comments', commentable: @report %>
</div>

<nav class="page-nav">
  <% if current_user == @report.user %>
    <%= link_to t('views.common.edit', name: Report.model_name.human.downcase), edit_report_path(@report) %> |
  <% end %>
  <%= link_to t('views.common.back', name: i18n_pluralize(Report.model_name.human.downcase)), reports_path %>

  <% if current_user == @report.user %>
    <%= button_to t('views.common.destroy', name: Book.model_name.human.downcase), @report, method: :delete %>
  <% end %>
</nav>
